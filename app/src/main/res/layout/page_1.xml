<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@android:color/holo_green_dark"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="425dp"
        android:layout_height="295dp"
        app:srcCompat="@drawable/danielgleason" />

    <TextView
        android:id="@+id/one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:text='Daniel Gleason'
        android:textColor="@android:color/white"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/avg1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="4.9"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/recentComment1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:text="&quot;He's a god&quot;"
        android:textColor="@android:color/white"
        android:textSize="32sp" />

    <Button
        android:id="@+id/rateButton1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="jumptopage"
        android:text="Rate!" />

    <Button
        android:id="@+id/updateButton1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update" />


</LinearLayout>